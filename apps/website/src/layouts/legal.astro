---
import { format } from "date-fns";

const { lastModified } = Astro.props;
---

<main
  class="relative md:max-w-3xl w-11/12 mx-auto bg-white rounded-md p-10 text-black shadow lg:hover:shadow-2xl transition-all duration-500 ease-in-out my-10"
>
  <span class="absolute top-5 right-5">🏀</span>

  <slot />

  <div class="flex items-center justify-between text-xs mt-10 mb-5">
    <span> - Dunker &copy; {new Date().getFullYear()}</span>

    <span>
      {format(new Date(lastModified || new Date()), "MMMM do yyyy")}
    </span>
  </div>
</main>
