---
import "@fontsource-variable/jetbrains-mono";
import "@fontsource/bebas-neue";

import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props as { title: string };
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

    <link rel="stylesheet" href="./styles.css" />

    <title>
      DUNKER &copy; {new Date().getFullYear()}
    </title>

    <meta
      name="description"
      content="Dunker is a dribbble client app, available for Android and iOS."
    />

    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🏀</text></svg>"
    />

    <script src="https://cdn.usefathom.com/script.js" data-site="GZDHKXQL" defer></script>
    <ViewTransitions />
  </head>

  <body
    class="text-white font-mono bg-[#0A5AF5] flex items-center justify-center min-h-screen"
  >
    <slot />
  </body>
</html>
